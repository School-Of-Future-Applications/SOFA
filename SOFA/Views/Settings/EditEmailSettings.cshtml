
@using SOFA.Models

@model EmailSettings

@{
    Layout = "~/Views/_SettingsLayout.cshtml";
}

<h3>Email Settings</h3>

<div class="row">
    <div class="col-md-4 col-md-offset-4">
        @Html.ValidationSummary()

        @using (Html.BeginForm("EditEmailSettings", "Settings", FormMethod.Post
                              ,new { @class = "form-horizontal" }))
        {
            <div class="form-group">
                @Html.LabelFor(model => model.UserAdminFromEmail, "User Admin From Email"
                              ,new { @class = "control-label col-sm-4" })
                <div class="col-sm-8">
                    @Html.EditorFor(model => model.UserAdminFromEmail)
                    @Html.ValidationMessageFor(model => model.UserAdminFromEmail)
                </div>
            </div>
            
            <div class="form-group">
                <div class="col-sm-8 col-sm-offset-4">
                    <input type="submit" class="btn btn-default" value="Save Email Settings" />
                </div>
            </div>
        }
    </div>
</div>