
@using SOFA.Models

@model SMTPSettings

@{
    ViewBag.Title = "SMTPSettings";
    Layout = "~/Views/_SettingsLayout.cshtml";
}

<h3>SMTP Settings</h3>

<div class="row">
    <div class="col-md-4 col-md-offset-4">
        @Html.ValidationSummary()

        @using (Html.BeginForm("EditSMTPSettings", "Settings", FormMethod.Post
                              ,new { @class = "form-horizontal" }))
        {
            <div class="form-group">
                @Html.LabelFor(model => model.Host, "Host"
                              ,new { @class = "control-label col-sm-3" })
                <div class="col-sm-9">
                    @Html.EditorFor(model => model.Host)
                    @Html.ValidationMessageFor(model => model.Host)
                </div>
            </div>
            
            <div class="form-group">
                @Html.LabelFor(model => model.Port, "Port"
                              ,new { @class = "control-label col-sm-3" })
                <div class="col-sm-5">
                    @Html.EditorFor(model => model.Port)
                    @Html.ValidationMessageFor(model => model.Port)
                </div>
            </div>
            
            <div class="form-group">
                @Html.LabelFor(model => model.SSL, "SSL"
                              ,new { @class = "control-label col-sm-3"})
                <div class="col-sm-9">
                    @Html.EditorFor(model => model.SSL)
                    @Html.ValidationMessageFor(model => model.SSL)
                </div>
            </div>
            
            <div class="form-group">
                @Html.LabelFor(model => model.UserName, "User Name"
                              ,new { @class = "control-label col-sm-3" })
                <div class="col-sm-9">
                    @Html.EditorFor(model => model.UserName)
                    @Html.ValidationMessageFor(model => model.UserName)
                </div>
            </div>
            
            <div class="form-group">
                @Html.LabelFor(mode => Model.Password, "Password"
                              ,new { @class = "control-label col-sm-3" })
                <div class="col-sm-9">
                    @Html.EditorFor(model => model.Password)
                    @Html.ValidationMessageFor(model => model.Password)
                </div>
            </div>
            
            <div class="form-group">
                @Html.LabelFor(mode => Model.ConfirmPassword, "Confirm Password"
                              ,new { @class = "control-label col-sm-3" })
                <div class="col-sm-9">
                    @Html.EditorFor(model => model.ConfirmPassword)
                    @Html.ValidationMessageFor(model => model.ConfirmPassword)
                </div>
            </div>
            
            <div class="form-group">
                <div class="col-sm-9 col-sm-offset-3">
                    <input type="submit" class="btn btn-default" value="Save SMTP Settings" />
                </div>
            </div>         
        }
    </div>
</div>