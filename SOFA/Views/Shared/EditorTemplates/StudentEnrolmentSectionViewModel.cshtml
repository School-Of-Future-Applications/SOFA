@using SOFA.Models
@using SOFA.Models.ViewModels.EnrolmentViewModels

@model StudentEnrolmentSectionViewModel

@Html.HiddenFor(m => m.SectionId)
@Html.HiddenFor(m => m.SectionName)
@Html.HiddenFor(m => m.DateCreated)
@Html.HiddenFor(m => m.OriginalSectionId)
@Html.HiddenFor(m => m.SectionNumber)
@Html.HiddenFor(m => m.TotalSections)

@Html.HiddenFor(m => m.Student.Id)

<div class="panel panel-primary">
    <div class="panel-heading">
        @Model.SectionName
        <span class="pull-right">
            @Model.SectionNumber/@Model.TotalSections
        </span>
    </div>

    <div class="panel-body">
        <div class="form-group">
            @Html.LabelFor(m => m.Student.GivenNames, new { @class = "control-label col-xs-2 label-align" })
            <div class="col-xs-10">
                @Html.EditorFor(m => m.Student.GivenNames, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Student.GivenNames)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Student.LastName, new { @class = "control-label col-xs-2 label-align" })
            <div class="col-xs-10">
                @Html.EditorFor(m => m.Student.LastName, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Student.LastName)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Student.Email, new { @class = "control-label col-xs-2 label-align" })
            <div class="col-xs-10">
                @Html.EditorFor(m => m.Student.Email, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Student.Email)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Student.PhoneNumber, new { @class = "control-label col-xs-2 label-align" })
            <div class="col-xs-10">
                @Html.EditorFor(m => m.Student.PhoneNumber, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Student.PhoneNumber)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Student.MobileNumber, new { @class = "control-label col-xs-2 label-align" })
            <div class="col-xs-10">
                @Html.EditorFor(m => m.Student.MobileNumber, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Student.MobileNumber)
            </div>
        </div>


    </div>

</div>
