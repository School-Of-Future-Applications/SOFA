@using SOFA.Models

@model TimetabledClass

<div class="panel panel-orange2">
    <div class="panel-heading">
        <h3 class="panel-title">Class Information</h3>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-sm-12">
                <table class="info-grid" style="display:inline-table;">
                    <tr>
                        <td align="right"><strong>Class Id:</strong></td>
                        <td>@Model.Id</td>
                    </tr>
                    <tr>
                        <td align="right"><strong>Class Name:</strong></td>
                        <td>@Model.DisplayName</td>
                    </tr>
                    <tr>
                        <td align="right"><strong>Class Base:</strong></td>
                        <td>@Model.ClassBase.ClassBaseCode - @Model.ClassBase.YearLevel
                            - @Model.ClassBase.Course.CourseName (@Model.ClassBase.Course.CourseCode)</td>
                    </tr>
                    <tr>
                        <td align="right"><strong>Capacity:</strong></td>
                        <td>@Model.Capacity</td>
                    </tr>

                </table>
            </div>
        </div>
    </div>
</div>