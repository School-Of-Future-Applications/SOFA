@using SOFA.Models
@model EnrolmentField

<style>
    .label-align {
        text-align: right;
    }
</style>

<tr class="field_row">
    @switch (Model.FieldType)
    {
        case Field.TYPE_TEXT_SINGLE:
            <td align="right" class="prompt"><strong>@Model.PromptValue:</strong></td>
            <td class="value">@Model.Value</td>
            break;

        case Field.TYPE_TEXT_MULTI:
            <td align="right" class="prompt"><strong>@Model.PromptValue:</strong></td>
            <td class="value">@Model.Value</td>
            break;

        case Field.TYPE_DATE:
        @Html.Partial("~/Views/Shared/DisplayTemplates/EnrolmentFieldDate.cshtml", Model)
            break;

        case Field.TYPE_INFO:
        @Html.LabelFor(model => model.PromptValue, Model.PromptValue
                             , new { @class = "col-xs-12 control-label" })
            break;

        case Field.TYPE_FILE:
        @Html.Partial("~/Views/Shared/DisplayTemplates/FileViewModel.cshtml", Model)
            break;
        default:
            @Html.Display("Not Implemented")
            break;
    }
</tr> 