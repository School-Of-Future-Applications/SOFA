@using SOFA.Models

@model Student

@{
}

<div class="panel panel-success2">
    <div class="panel-heading">
        <h3 class="panel-title">Student Information</h3>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-sm-12">
                <span class="initial-circle">TM</span>
                <table class="info-grid" style="display:inline-table;">
                    <tr>
                        <td align="right"><strong>Given Names:</strong></td>
                        <td>@Model.GivenNames</td>
                    </tr>
                    <tr>
                        <td align="right"><strong>Last Name:</strong></td>
                        <td>@Model.LastName</td>
                    </tr>
                </table>
                <table class="info-grid" style="display:inline-table;">
                    <tr>
                        <td align="right"><strong>Email:</strong></td>
                        <td>@Model.Email</td>
                    </tr>
                    <tr>
                        <td align="right"><strong>Mobile:</strong></td>
                        <td>@Model.MobileNumber</td>
                    </tr>
                    <tr>
                        <td align="right"><strong>Phone:</strong></td>
                        <td>@Model.PhoneNumber</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>