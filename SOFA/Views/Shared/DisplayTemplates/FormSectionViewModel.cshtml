@using SOFA.Models.ViewModels.FormViewModels

@model SOFA.Models.ViewModels.FormViewModels.FormSectionViewModel
          
<div class="accordion-div panel panel-primary">
    @Html.HiddenFor(m => m.Section.Id, new { @class = "sectionId" })
    
    <h3 class="panel-heading">@Html.DisplayFor(m => m.Section.Name)</h3>
    <div class="panel-body">
        <div class="pull-right margin-bottom">

        @Html.ActionLink("Edit", "Edit", "Section", new { SectionId = Model.Section.Id }, null)        
        <a href="#" class="removeSectionLink">Remove</a>
            
        
        </div>
        <div>
            @Html.DisplayFor(m => m.Section)
        </div>
    </div>

</div>