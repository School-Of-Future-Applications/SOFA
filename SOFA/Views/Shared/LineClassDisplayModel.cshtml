@using SOFA.Models.ViewModels.EnrolmentViewModels

@model ClassSelectViewModel

<div class="col-xs-12">
    <h3>Select Class</h3>
    @foreach (LineClassDisplayModel displayModel in Model.Lines)
    {
        <h4>@Html.DisplayFor(x => displayModel.LineDisplayName)</h4>
        <table class="table">
            @foreach (var tc in displayModel.Classes)
            {
                <tr>
                    <td class="">
                        @Html.DisplayFor(x => tc.Name)
                    </td>
                    <td class="text-right"><button class="btn btn-primary">Select</button></td>
                </tr>
            }

        </table>
}
</div>
