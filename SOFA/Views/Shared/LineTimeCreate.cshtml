@model SOFA.Models.LineTime


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Line Time</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.Day,new { @class = "col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Day, new SelectList(
               new List<Object>{
                new { value= 1, text = "Monday"},
                new { value= 2, text = "Tuesday"},
                new { value= 3, text = "Wednesday"},
                new { value= 4, text = "Thursday"},
                new { value= 5, text = "Friday"},
                new { value= 6, text = "Saturday"},
                new { value= 7, text = "Sunday"}
               },"value","text"))
                @Html.ValidationMessageFor(model => model.Day)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.StartTime, new { @class = "col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.StartTimeString)
                @Html.ValidationMessageFor(model => model.StartTimeString)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.EndTime, new { @class = "col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.EndTimeString)
                @Html.ValidationMessageFor(model => model.EndTimeString)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
