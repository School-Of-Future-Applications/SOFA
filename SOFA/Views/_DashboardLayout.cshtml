
@{
    if (ViewBag.NavItem == null)
    {
        ViewBag.NavItem = "";
    }
}

<!DOCTYPE html>

<html>
<head>
   <meta charset="utf-8" />
   <meta name="viewport" content="width=device-width" />
   <meta name="author" content="Terminal Coding" />

   <link rel="stylesheet" href="~/Content/bootstrap-theme.css" />
   <link rel="stylesheet" href="~/Content/bootstrap.css" />
   <link rel="stylesheet" href="~/Content/dashboard.css" />

   <script src="~/Scripts/bootstrap.min.js"></script>
   <script src="~/Scripts/jquery-1.9.1.min.js"></script>
   <title>@ViewBag.Title</title>
</head>
<body>
    
   <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container-fluid">
         
         <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse"
                    data-target="sofa-dashboard-navbar-collapse" >
               <span class="sr-only">Toggle navigation</span>
               <span class="icon-bar"></span>
               <span class="icon-bar"></span>
               <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">SOFA</a>
         </div>

         <div class="collapse navbar-collapse" id="sofa-dashboard-navbar-collapse">
            <ul class="nav navbar-nav navbar-right">
               <li><a href="#">User</a></li>
            </ul>
         </div><!--navbar items-->

      </div><!--container-fluid-->
   </div><!--navbar-->

   <div class="container-fluid">
      <div class="row">
         <div class="col-sm-1 col-md-1 sidebar">
            <ul class="nav nav-sidebar">
               <li class="@(@ViewBag.NavItem.Equals("Department & Courses") ? "active" : "")">
                <a href="~/Department">Department &amp; Courses</a>
               </li>
            </ul> 
         </div>

      @RenderBody()
      </div><!--Row-->
   </div><!--Container for sidebar-->

 
</body>
</html>
