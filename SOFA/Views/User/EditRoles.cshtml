@model SOFA.Models.ViewModels.EditUserRolesViewModel

<div class="col-md-11 col-md-offset-1">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h2>Edit User Role</h2>
            <hr />
            @Html.ValidationSummary(true)
            <div class="form-group">
                @Html.LabelFor(model => model.User, new { @class = "col-md-2" })
                @Html.DisplayFor(model => model.User)
                @Html.HiddenFor(model=> model.User)  
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.CurrentRole, new { @class = "col-md-2" })
                @Html.DisplayFor(model => model.CurrentRole)
            </div>


            <hr />

            <h4>Role</h4>
            @Html.DropDownListFor(model => model.SelectedRoleId, new SelectList(Model.AvailableRoles, "Id", "Name",Model.CurrentRoleId))

            <br />
            <br />
            <div class="form-group">
                <div class="col-md-10">
                    <input type="submit" value="Set Role" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</div>
