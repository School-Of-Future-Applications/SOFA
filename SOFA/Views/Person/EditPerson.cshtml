@using SOFA.Models

@model Person

@{
    ViewBag.Title = "EditPerson";
}

<div class="page-header">
    <h2>Edit - @Model.FullName()</h2>
</div>

<div class="row">
    <div class="col-md-4 col-md-offset-4">
        @Html.ValidationSummary()

        @using (Html.BeginForm("EditPerson", "Person", FormMethod.Post
                              ,new { @class = "form-horizontal" }))
        {
            @Html.Partial("PersonFormComponents", Model)
                        
            <div class="form-group">
                <div class="col-sm-9 col-sm-offset-3">
                    <input type="submit" class="btn btn-default" value="Save Person" />
                </div>
            </div>                                                                       
        }
    </div>
</div>