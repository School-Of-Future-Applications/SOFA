@using System.Collections.Generic
@using SOFA.Models

@model List<Section>

@{
    ViewBag.Title = "Index";
}

<script typeof="text/javascript">
    $(document).ready(function () {
  
        $('#addsection-dialog').dialog({
            autoOpen: false,
            width: 600,
            resizable: true,
            modal: true
        });
    
        $(".addsection").click(function (event) {
            event.preventDefault();
            $('#addsection-dialog').load(this.href, function () {
                $(this).dialog('open');
            });
        });
    });
</script>

<div class="page-header">
    <ol class="breadcrumb">
        <li class="active">Sections</li>
    </ol>
    <h2>Sections</h2>
    @Html.ActionLink("New Section", "CreateSection", null
                    ,new { @class = "btn btn-default addsection" })
   
</div>

<div class="row">
    @foreach(Section s in Model)
    {
        bool isDefault = Section.DEFAULT_SECTION_IDS.Contains(s.Id);
        <div class="col-md-3 col-sm-5">
            <div class="panel @(isDefault ? "panel-success" : "panel-primary")">
                <div class="panel-heading">@s.Name</div>
                <div class="panel-body">
                    <p>
                        <b>Section Id: </b>@s.Id<br/>
                        <b>Date Created: </b>@s.DateCreatedString()<br/>
                        <b>Children Count: </b>@s.Fields.Count<br/>
                    </p>

                    @if(!isDefault)
                    {
                        <div class="btn-group pull-right">
         
                            @Html.ActionLink("Edit", "Edit", "Section", new { sectionId = s.Id }
                                            ,new { @class = "btn btn-default" })
                            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                                <span class="caret"></span>
                                <span class="sr-only">Toggle Dropdown</span>
                            </button>
                            <ul class="dropdown-menu" role="menu">
                                    <li>@Html.ActionLink("Delete", "Delete", new { id = s.Id })</li>
                            </ul>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
</div>

<div id="addsection-dialog"></div>