@using SOFA.Models.ViewModels

@model SectionSelectViewModel


<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4>Add Section</h4>
</div>




    <div class="modal-body">
        <div class="form-group">
            @Html.LabelFor(m => m.SectionItems, new { @class = "col-md-2 text-right" })
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.SelectedSectionId, Model.SectionItems, new { @class = "form-control col-md-8" })
            </div>
        </div>
    </div>

    <div class="modal-footer">
        <button class="btn btn-success add-submit" type="button">
            <span class="glyphicon glyphicon-plus"></span> Add
        </button>
        <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>

    </div>




