@using SOFA.Models

@model EmailSettings

@{
   // Layout = "~/Views/_SettingsLayout.cshtml";
}

<div class="row">
    <ol class="breadcrumb">
        You are here:
        <li class="active">Email Settings</li>
    </ol>
</div>

<div class="row">
    <h2 class="col-sm-12">
        Email Settings
    </h2>
</div>

<div class="row">
    <div class="col-sm-8 col-md-offset-2">
        @Html.ValidationSummary()

        @using (Html.BeginForm("EditEmailSettings", "EmailSettings", FormMethod.Post
                              , new { @class = "form-horizontal" }))
        {
            <div class="form-group">
                @Html.LabelFor(model => model.UserAdminFromEmail, "User Admin From Email"
                              , new { @class = "control-label col-sm-3" })
                <div class="col-sm-6">
                    @Html.EditorFor(model => model.UserAdminFromEmail)
                    @Html.ValidationMessageFor(model => model.UserAdminFromEmail)
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-3 col-sm-offset-6">
                    <input type="submit" value="Save Email Settings" class="btn btn-success pull-right" />
                </div>
            </div>
        }
    </div>
</div>