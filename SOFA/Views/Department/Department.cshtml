
@using SOFA.Models
@model Department

@{
    Layout = "~/Views/_DepartmentLayout.cshtml";
}

<h2>@Model.DepartmentName</h2>

<div class="row">
    <div class="col-md-12">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Course Code</th>
                    <th>Course Name</th>
                    <th>Class Count</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Course c in Model.Courses)
{
                <tr class="clickableRow" onclick="location.href='@Url.Action("Index", "ClassBase", new { courseID = c.Id })'">
                    <td>@c.CourseCode</td>
                    <td>@c.CourseName</td>
                    <td>@c.ClassBases.Count()</td>
                </tr>
}
            </tbody>
        </table>
    </div>
</div>

@if (Model.Courses.Count == 0)
{
    <div class="row">
        <div class="col-md-12">
            <div class="jumbotron">
                <h2 class="text-center">@Model.DepartmentName Has No Courses!</h2>
                <p class="text-center"><button type="button" onclick="location.href='@Url.Action("CreateEdit", "Course", new { departmentID = Model.id})'" class="btn btn-success btn-lg">Add Course</button></p>
            </div>
        </div>
    </div>
}
