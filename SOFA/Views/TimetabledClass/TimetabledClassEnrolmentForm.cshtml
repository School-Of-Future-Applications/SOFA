@using SOFA.Models
@using SOFA.Models.ViewModels

@model EnrolmentForm

@{
    ViewBag.Title = "TimetabledClassEnrolmentForm";

    EnrolmentFormViewModel vm = new EnrolmentFormViewModel();
    vm.EnrolmentForm = Model;
    vm.ApproveAction = "TimetabledClassEnrolmentForm";
    vm.ApproveController = "TimetabledClass";
    vm.ApproveArgs.Add("enrolmentFormId", Model.EnrolmentFormId);
    vm.DeleteAction = "TimetabledClass";
    vm.DeleteController = "TimetabledClass";
    vm.DeleteArgs.Add("timetabledClassId", Model.Class.Id.ToString());
    vm.DisapproveAction = "TimetabledClassEnrolmentForm";
    vm.DisapproveController = "TimetabledClass";
    vm.DisapproveArgs.Add("enrolmentFormId", Model.EnrolmentFormId);
}

<div class="row">
    <ol class="breadcrumb">
        You are here:
        <li>Enrolment Form For @Model.Student.FullName()</li>
    </ol>
</div>

@Html.Action("EnrolmentForm", "Enrolment", vm)