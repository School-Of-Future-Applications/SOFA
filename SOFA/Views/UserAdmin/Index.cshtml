@using System.Collections.Generic
@using SOFA.Models

@model List<Person>

@{
    ViewBag.Title = "User Administration";
}

<div class="row">
    <ol class="breadcrumb">
        You are here:
        <li class="active">@ViewBag.Title</li>
    </ol>
</div>

<div class="row">
    <h2 class="col-sm-6">
        @ViewBag.Title
    </h2>
    <h2 class="col-sm-6">
        <a href="@Url.Action("NewUser")" class="btn btn-primary btn-labeled pull-right">
            <span class="btn-label icon glyphicon glyphicon-plus"></span>
            Add New User
        </a>
    </h2>
</div>
 
<div class="row">
    <div class="col-sm-12">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>User Id</th>
                    <th>Full Name</th>
                    <th>User Name</th>
                    <th>Position</th>
                </tr>
            </thead>
            <tbody>
                @foreach(Person p in Model)
                {
                    <tr onclick="location.href='@Url.Action("UserAdmin", "UserAdmin"
                                                           ,new { personId = p.Id })'"
                        class=@(!p.User.Active ? "danger" : "")>
                        <td>@p.User.Id</td>
                        <td>@p.FullName()</td>
                        <td>@p.User.UserName</td>
                        <td>@p.Position</td>
                    </tr>
                }
            </tbody>
        </table>@* End of Person table. *@
    </div>
</div>