@using SOFA.Models.ViewModels.EnrolmentViewModels;

@model EnrolmentSectionViewModel

@{
    Layout = null;
}



<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="author" content="Terminal Coding" />

    <link rel="stylesheet" href="~/Content/bootstrap-datetimepicker.min.css" />
    <link rel="stylesheet" href="~/Content/bootstrap-theme.css" />
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    <link rel="stylesheet" href="~/Content/enrolment.css" />

    <script src="~/Scripts/jquery-2.1.0.min.js"></script>
    <script src="~/Scripts/moment.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/bootstrap-datetimepicker.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

    <title>SOFA Enrolment</title>
</head>
<body>

    <div class="container">
        @using (Html.BeginForm("Enrol", "Enrolment", FormMethod.Post
                              ,new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.FormId)
            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    @Html.EditorFor(m => m)
                </div>
            </div>   

            
            <div class="row">
                <div class="col-md-1 col-md-offset-9">
                    @{
                        string buttonText;
                        if (Model.SectionNumber == Model.TotalSections)
                        {
                            buttonText = "Submit";
                        }
                        else
                        {
                            buttonText = "Continue";
                        }
                    }
                    <input type="submit" class="btn btn-primary" value="@buttonText" />
                </div>
            </div>
        }
    </div>
</body>
</html>