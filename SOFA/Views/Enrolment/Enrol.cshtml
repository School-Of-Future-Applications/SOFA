@using SOFA.Models
@model EnrolmentForm

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="author" content="Terminal Coding" />

    <link rel="stylesheet" href="~/Content/bootstrap-theme.css" />
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    <link rel="stylesheet" href="~/Content/enrolment.css" />

    <script src="~/Scripts/bootstrap.min.js"></script>

    <title>SOFA Enrolment</title>
</head>
<body>
    <div class="container">

        @using (Html.BeginForm("#", "#", FormMethod.Post
                              ,new { @class = "form-horizontal" }))
        {
            foreach(EnrolmentFormSection efSection in Model.EnrolmentFormSections)
            {
                <div class="row">
                    <div class="col-md-8 col-md-offset-2">
                        @Html.EditorFor(m => efSection)
                    </div>
                </div>   
            }
            
            <input type="submit" class="btn btn-primary" value="Submit" />
        }
    </div>
</body>
</html>

