@using SOFA.Models

@model EnrolmentForm

@{
}

<div class="row">
    <div class="col-sm-12">
        <span style="background-color: blue;">
            ff
        </span>
    </div>
</div>

<div class="row">
    <h2 class="col-sm-6">
        Enrolment Form For @Model.Student.FullName()
    </h2>
</div>

<div class="row">
    <div class="col-sm-4">
        @Html.DisplayFor(model => model)
    </div>
    <div class="col-sm-4">
        @Html.DisplayFor(model => model.Class)
    </div>
    <div class="col-sm-4">
        @Html.DisplayFor(model => model.Student)
    </div>
</div>

<div class="row">
    <div class="col-sm-12">
       <div class="btn-toolbar" role="toolbar">
           <div class="btn-group">
               <button type="button" class="btn btn-default">Left</button>
               <button type="button" class="btn btn-default">Middle</button>
               <button type="button" class="btn btn-default">Right</button>
           </div>
       </div>
    </div>
</div>

<div class="row">
    <div class="col-sm-offset-3 col-sm-6">

        @foreach(EnrolmentFormSection efs in Model.EnrolmentFormSections)
        {
            if(efs.EnrolmentSection.OriginalSectionId != Section.COURSE_SECTION_ID &&
                efs.EnrolmentSection.OriginalSectionId != Section.STUDENT_SECTION_ID)
            {
                @Html.DisplayFor(model => efs.EnrolmentSection)  
            }
        }

    </div>
</div>