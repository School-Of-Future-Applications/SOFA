@using SOFA.Models

@model EnrolmentForm

@{
    var headingColor = "";
    var headingText = "";
    switch (Model.Status)
    {
        case EnrolmentForm.EnrolmentStatus.Approved:
            headingColor = "#8fc344";
            headingText = "APPROVED";
            break;
            
        case EnrolmentForm.EnrolmentStatus.Completed:
            headingColor = "#8eb5c4";
            headingText = "COMPLETED";
            break;
            
        case EnrolmentForm.EnrolmentStatus.Disapproved:
            headingColor = "#b9554a";
            headingText = "DISAPPROVED";
            break;
            
        case EnrolmentForm.EnrolmentStatus.Pending:
            headingColor = "#dcb046";
            headingText = "PENDING";
            break;
            
        default:
            break;
    }
}

<style>
    .status-font {
        color: #958888;
        font-size: x-large;
    }
</style>

<div class="row">
    <div class="col-sm-12" style="background-color: @headingColor;">
        <span class="status-font">
            @headingText
        </span>
    </div>
</div>

<div class="row">
    <h2 class="col-sm-6">
        Enrolment Form For @Model.Student.FullName()
    </h2>
</div>

<div class="row">
    <div class="col-sm-4">
        @Html.DisplayFor(model => model)
    </div>
    <div class="col-sm-4">
        @Html.DisplayFor(model => model.Class)
    </div>
    <div class="col-sm-4">
        @Html.DisplayFor(model => model.Student)
    </div>
</div>

<div class="row">
    <div class="col-sm-12">
       <div class="btn-toolbar" role="toolbar">
           <div class="btn-group">
               <button type="button" class="btn btn-default">Left</button>
               <button type="button" class="btn btn-default">Middle</button>
               <button type="button" class="btn btn-default">Right</button>
           </div>
       </div>
    </div>
</div>

<div class="row">
    <div class="col-sm-offset-3 col-sm-6">

        @foreach(EnrolmentFormSection efs in Model.EnrolmentFormSections)
        {
            if(efs.EnrolmentSection.OriginalSectionId != Section.COURSE_SECTION_ID &&
                efs.EnrolmentSection.OriginalSectionId != Section.STUDENT_SECTION_ID)
            {
                @Html.DisplayFor(model => efs.EnrolmentSection)  
            }
        }

    </div>
</div>