@model SOFA.Form

@{
    ViewBag.Title = "View1";
}

<script>
    $(document).ready(function () {
        var prev_sect_update = new Array();
        $("#accordion").accordion(
            {
                header: "> div > h3"
            }).
            sortable({
                axis: "y",
                handle: "h3",
                stop: function( event, ui ) {
                    // IE doesn't register the blur when sorting
                    // so trigger focusout handlers to remove .ui-state-focus
                    ui.item.children("h3").triggerHandler("focusout");
                    var sections = $("#accordion input").toArray();
                    var $section_ids = new Array();
                    $.each(sections, function(i) {
                        $section_ids.push($(this).val());
                    });
                    //check if needs to be updated
                    var equal = true;
                    console.log($section_ids);
                    $.each($section_ids, function (i) {
                        if (!(this == prev_sect_update[i])) {
                            equal = false;
                            return false;
                        }
                    });
                    if (equal) {
                        console.log("equal");
                    }
                    prev_sect_update = $section_ids;
                    // Refresh accordion to handle new order
                    $( this ).accordion( "refresh" );
                }
            })
    });
        
</script>

<h2>Create Form</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Form</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.Id, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Id)
                @Html.ValidationMessageFor(model => model.Id)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FormName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.FormName)
                @Html.ValidationMessageFor(model => model.FormName)
            </div>
        </div>

    </div>
    <div id="accordion" class="form-group">
        @foreach (FormSection s in Model.FormSections)
        {
            @Html.DisplayFor(m => s)
        }
        
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
}


