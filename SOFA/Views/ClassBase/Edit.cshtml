@model SOFA.Models.ViewModels.ClassBaseViewModel

@{
    ViewBag.Title = "Edit | " + Model.ClassBaseCode;
}

<h2>Edit @Model.ClassBaseCode</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.CourseID)       
        @Html.HiddenFor(model => model.CourseName)

        <div class="form-group">
            @Html.LabelFor(model => model.ClassBaseCode, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ClassBaseCode)
                @Html.ValidationMessageFor(model => model.ClassBaseCode)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.YearLevel, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.YearLevel)
                @Html.ValidationMessageFor(model => model.YearLevel)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index", new { id = Model.CourseID })
</div>
